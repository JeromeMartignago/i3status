        format = "<span background='#bf616a'> Ó¶à %degrees ¬∞C </span>"
        path = "/sys/class/thermal/thermal_zone0/temp"
}

cpu_usage {
    format = "<span background='#f59335'> Ó§Æ %usage </span>"
}

disk "/" {
        format = "<span background='#fec7cd'> Ó•á %free Free </span>"
}

disk "/home" {
        format = "<span background='#a1d569'> Ó•Ö %free Free </span>"
}

ethernet enp5s0f1 {
        format_up = "<span background='#88c0d0'> Ó§Å %ip </span>"
        format_down = "<span background='#88c0d0'> Ó§Å Disconnected </span>"
}

wireless wlp4s0 {
        format_up = "<span background='#b48ead'> Ó§í %essid %ip</span>"
        format_down = "<span background='#b48ead'> Ó§ë Disconnected </span>"
}

volume master {
        format = "<span background='#ebcb8b'> Ó§ï %volume </span>"
        format_muted = "<span background='#ebcb8b'> Ó§î Muted </span>"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

battery 0 {
	last_full_capacity = true
        format = "<span background='#a3be8c'> Ó§ì %status %percentage </span>"
        format_down = "No Battery"
        status_chr = "‚ö° Charg"
        status_bat = "üîã Batt"
        status_unk = "? Unk"
        status_full = "‚òª Full"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}

tztime local {
		format = "<span background='#81a1c1'> %time </span>"
		format_time = "Ó§ß %a %-d %b %H:%M:%S"
}

