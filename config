general {
        output_format = "i3bar"
        colors = false
        markup = pango
        interval = 5
        color_good = '#2f343f'
		color_degraded = '#ebcb8b'
		color_bad = '#ba5e57'
}

order += "load"
order += "cpu_temperature 0"
order += "cpu_usage"
order += "disk /"
order += "disk /home"
order += "ethernet enp5s0f1"
order += "wireless wlp4s0"
order += "volume master"
order += "battery 0"
order += "tztime local"

load {
        format = "<span background='#f59335'> Ó§Ä %5min Load </span>"
}

